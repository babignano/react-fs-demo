{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "../../build/api",
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
            "node_modules/apollo-server-types"
        ]
    },
    "include": [
        "./**/*",
        "./.secrets/**/*.*"
    ]
}
